spring.jpa.database=SQL_SERVER
spring.jpa.show-sql=true
spring.jpa.hibernate.ddl-auto=update
spring.datasource.url=jdbc:sqlserver://localhost;databaseName=pessoas;createDatabaseIfNotExist=true;useSSL=false;allowPublicKeyRetrieval=true
